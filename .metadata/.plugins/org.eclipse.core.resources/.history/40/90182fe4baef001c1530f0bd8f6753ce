package Recursions.KunalKushwahaYT;

public class CountZeros {

	public static void main(String[] args) {
		int z = 0100;
		System.out.println(countZeros(z));

	}

	private static int countZeros(int z) {
		System.out.println(z);
		return helperCountZeros(z,0);
	}

	private static int helperCountZeros(int z, int count) {
		System.out.println(z);
		if(z/10 == 0)
			return count;
		
		if(z%10 == 0)
			count++;
		
		return helperCountZeros(z/10, count);
	}

}
