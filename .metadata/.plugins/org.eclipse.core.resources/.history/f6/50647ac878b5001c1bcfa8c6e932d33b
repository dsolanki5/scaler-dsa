package BinarySearch;

public class SquareRoot {
	
	public static int sqrtN(long N) {
		int s = 0;
        long e = N;
        int mid = (int)(s + (e-s)/2);
        int ans = -1;
        
        while(s<e) {
            if((mid*mid) > N) {
            	e = mid-1;
            }
            else if((mid*mid) < N) {
            	ans = mid;
            	s = mid+1;
            }
            mid = (int)(s + (e-s)/2);
        }
        return ans;
	}

	public static void main(String[] args) {
		
		System.out.println(sqrtN(6));

	}

}
