package Recursions.KunalKushwahaYT;

public class BinarySearchInRotatedArray {
	
	public static int rotatedBinarySearch(int[] arr, int t, int s, int e) {
		
		if(s>e) {
			return -1;
		}
		
		int mid = s + (e-s)/2;
		
		if(arr[mid] == t) {
			return mid;
		}
		
		if(arr[s] <= arr[mid]) {
			if (t < arr[mid])
				e = mid-1;
			else
				s = mid+1;
		}
		
		if(arr[mid] <= arr[e] && t >= arr[mid]) {
			s = mid+1;
		}
		else {
			e = mid - 1;
		}
		
		return rotatedBinarySearch(arr, t, s, e);
		
	}

	public static void main(String[] args) {
		int[] arr = {5,6,7,8,9,1,2,3};
		int target = 2;
		System.out.println(rotatedBinarySearch(arr,target,0,arr.length-1));

	}

}
