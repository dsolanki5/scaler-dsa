package BinarySearch;

public class PivotIndex {
	
	public static int pivotIndex(int[] nums) {
        int n = nums.length;
        int lsum=0, rsum = 0;
        for(int x:nums)
        	rsum+=x;
        
        for(int i=0; i<n-1; i++) {
        	
        	rsum-=nums[i];
        	if(lsum == rsum)
        		return i;
        	
        	lsum+=nums[i];
        	
        }
        
        return -1;
    }

	public static void main(String[] args) {
		int [] ar = {2,1,-1};
		System.out.println(pivotIndex(ar));

	}

}
